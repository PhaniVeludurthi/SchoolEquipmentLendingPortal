{
  "AllowedHosts": "*",
  "AllowedOrigings": [ "http://localhost:5173" ],
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=equipment_lending;Username=admin;Password=admin123"
  },
  "Jwt": {
    "Key": "SuperSecretKeyForEquipmentLendingPortal2025"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Postgresql.Alternative" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/equipment-lending-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "PostgreSql",
        "Args": {
          "connectionString": "Host=postgres;Database=equipment_lending;Username=admin;Password=admin123",
          "tableName": "application_logs",
          "needAutoCreateTable": true,
          "respectCase": false
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
